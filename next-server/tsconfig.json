{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": [
      "node",
      "next"
    ],
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.d.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "backend/**/*.ts",
    "backend/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "experiments/**/*",
    "../frontend/**",
    "../archive/**"
    "test-*.ts",
    "tests/**/*"
  ]
}
