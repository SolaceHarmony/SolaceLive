{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
  "types": ["node", "next"]
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.d.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "experiments/**/*",
    "lib/unified/app/**",
    "lib/unified/archive/**",
    "lib/unified/reference/**/*",
    "test-*.ts",
    "tests/**/*"
  ]
}
